{
  "expo": {
    "name": "ReceiptSplitter",
    "slug": "ReceiptSplitter",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/splash-icon.png",
    "scheme": "receiptsplitter",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "org.receiptsplitter.app"
    },
    "android": {
      "package": "org.receiptsplitter.app",
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "receiptsplitter"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#5c540b"
        }
      ]
    ],
    "extra": {
      "FIREBASE_API_KEY": "${FIREBASE_API_KEY}",
      "FIREBASE_AUTH_DOMAIN": "${FIREBASE_AUTH_DOMAIN}",
      "FIREBASE_PROJECT_ID": "${FIREBASE_PROJECT_ID}",
      "FIREBASE_STORAGE_BUCKET": "${FIREBASE_STORAGE_BUCKET}",
      "FIREBASE_MESSAGING_SENDER_ID": "${FIREBASE_MESSAGING_SENDER_ID}",
      "FIREBASE_APP_ID": "${FIREBASE_APP_ID}",
      "GOOGLE_CLIENT_ID": "${GOOGLE_CLIENT_ID}",
      "eas": {
        "projectId": "b7e0aa76-fa14-45e4-b0a9-8dad3bcebafb"
      }
    },
    "owner": "addisonia"
  }
}
